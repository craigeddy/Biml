<#@ include file="00_Configuration.biml"#>
<#@ template tier="1" #>
<Biml xmlns="http://schemas.varigence.com/biml.xsd"> 
	<Annotations>
		<Annotation AnnotationType="CodeComment">
			We need OLEDB connections for Flat file staging.  ADONET destinations in extract packages through mapping errors at build time.
        </Annotation>
    </Annotations>
	<Connections>
		<OleDbConnection Name="OLEDB_Extract" ConnectionString="Provider=SQLNCLI11;Data Source=<#=extractServer #>;Initial Catalog=<#= extractDatabase#>;Integrated Security=true" CreateInProject="true" >
			<Expressions>
				<Expression PropertyName="ConnectionString">
					"Provider=SQLNCLI11;Data Source=" + @[$Project::ExtractServer]+ ";Initial Catalog=" + @[$Project::ExtractDatabase] + ";Integrated Security=true"
                </Expression>
            </Expressions>
        </OleDbConnection>
		<OleDbConnection Name="OLEDB_Transform" ConnectionString="Provider=SQLNCLI11;Data Source=<#=transformServer #>;Initial Catalog=<#= transformDatabase#>;Integrated Security=true" CreateInProject="true" >
			<Expressions>
				<Expression PropertyName="ConnectionString">
					"Provider=SQLNCLI11;Data Source=" + @[$Project::TransformServer] + ";Initial Catalog=" + @[$Project::TransformDatabase] + ";Integrated Security=true"
                </Expression>
            </Expressions>
        </OleDbConnection>
		<OleDbConnection Name="OLEDB_PDS" ConnectionString="Provider=SQLNCLI11;Data Source=<#=pdsServer #>;Initial Catalog=<#= pdsDatabase#>;Integrated Security=true" CreateInProject="true" >
			<Expressions>
				<Expression PropertyName="ConnectionString">
					"Provider=SQLNCLI11;Data Source=" + @[$Project::PDSServer] + ";Initial Catalog=" + @[$Project::PDSDatabase] + ";Integrated Security=true"
                </Expression>
            </Expressions>
        </OleDbConnection>
		<OleDbConnection Name="OLEDB_DW" ConnectionString="Provider=SQLNCLI11;Data Source=<#=dwServer #>;Initial Catalog=<#= dwDatabase#>;Integrated Security=true" CreateInProject="true" >
			<Expressions>
				<Expression PropertyName="ConnectionString">
					"Provider=SQLNCLI11;Data Source=" + @[$Project::DWServer] + ";Initial Catalog=" + @[$Project::DWDatabase] + ";Integrated Security=true"
                </Expression>
            </Expressions>
        </OleDbConnection>
    </Connections>
</Biml>